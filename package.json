{
  "name": "writing-tool",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": []
  },
  "scripts": {
    "kill-server": "lsof -ti tcp:3000 | xargs kill",
    "clean": "yarn workspaces run clean",
    "dev:desktop": "cross-env BROWSER=none concurrently --kill-others \"yarn dev:web\" \"yarn workspace @writing-tool/desktop compile -w\" \"wait-on http://localhost:3000 && yarn workspace @writing-tool/desktop start\"",
    "dev:web": "yarn workspace @writing-tool/web start",
    "lint": "yarn workspaces run lint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "devDependencies": {
    "concurrently": "^5.1.0",
    "cross-env": "^7.0.2",
    "prettier": "2.0.5",
    "pretty-quick": "^2.0.1",
    "shx": "^0.3.2",
    "wait-on": "^4.0.2",
    "husky": "^4.2.5",
    "typescript": "4.4.3"
  }
}
