{
	"name": "writing-tool",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"devDependencies": {
		"lerna": "^3.20.2"
	},
	"scripts": {
		"bootstrap": "lerna bootstrap",
		"list-packages": "lerna la",
		"kill-server": "lsof -ti tcp:3000 | xargs kill",
		"refresh-dependencies": "rm -rf node_modules yarn.lock && lerna clean -y && yarn cache clean && lerna bootstrap",
		"start": "lerna run start --scope @writing-tool/react-app --stream",
		"start-server": "lerna run start --scope @writing-tool/api --stream",
		"build": "lerna run build --scope @writing-tool/react-app --stream",
		"predeploy": "yarn build",
		"deploy": "netlify deploy --prod",
		"test": "lerna run test --scope @writing-tool/react-app --stream"
	}
}
