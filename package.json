{
  "name": "writing-tool",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": []
  },
  "scripts": {
    "kill-server": "lsof -ti tcp:3000 | xargs kill",
    "clean": "yarn workspaces run clean",
    "dev:desktop": "cross-env BROWSER=none concurrently --kill-others \"yarn dev:web\" \"yarn workspace @writing-tool/desktop compile -w\" \"wait-on http://localhost:3000 && yarn workspace @writing-tool/desktop start\"",
    "dev:web": "yarn workspace @writing-tool/web start",
    "start": "yarn dev:desktop",
    "build": "yarn workspace @writing-tool/desktop build",
    "lint": "yarn workspaces run lint",
    "prepare": "husky install"
  },
  "devDependencies": {
    "concurrently": "^6.4.0",
    "cross-env": "^7.0.2",
    "husky": "^7.0.0",
    "prettier": "2.5.1",
    "pretty-quick": "^3.1.2",
    "shx": "^0.3.2",
    "turbo": "^1.0.13",
    "typescript": "4.5.2",
    "wait-on": "^6.0.0"
  },
  "turbo": {
    "npmClient": "yarn",
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ]
      },
      "start": {
        "dependsOn": [
          "^start"
        ]
      }
    }
  }
}
