{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["esnext"],
    "rootDir": "src",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    // "strict": true,
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "types": ["node"],
    "stripInternal": true
  },
  "include": ["src", "typings"],
  "exclude": ["node_modules"]
}
