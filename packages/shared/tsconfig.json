{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["es2015"],
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "commonjs",
    "moduleResolution": "node",
    // "strict": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "preserveWatchOutput": true,
    "sourceMap": true,
    "inlineSources": true,
    "types": ["node"],
    "stripInternal": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
